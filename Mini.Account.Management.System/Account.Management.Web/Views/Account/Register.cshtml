@model RegistrationModel;

@{
    ViewData["Title"] = "Register";
}

<div class="row flex justify-content-center">
    <div class="col-md-4 col-lg-5 mx-auto rounded border p-3 mt-2">
        <form id="registerForm" asp-area="" asp-action="Register" asp-controller="Account" asp-antiforgery="true" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2 class="text-center text-success">Register a new account</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="form-floating mb-3">
                <input asp-for="FistName" class="form-control" autocomplete="FistName" aria-required="true" placeholder="First Name" />
                <label asp-for="FistName">Fist Name</label>
                <span asp-validation-for="FistName" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="LastName" class="form-control" autocomplete="LastName" aria-required="true" placeholder="Last Name" />
                <label asp-for="LastName">Last Name</label>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Enter your email" />
                <label asp-for="Email">Email</label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Address" class="form-control" autocomplete="Address" aria-required="true" placeholder="Address" />
                <label asp-for="Address">Address</label>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="PhoneNumber" class="form-control" autocomplete="PhoneNumber" aria-required="true" placeholder="Phone Number" />
                <label asp-for="PhoneNumber">Phone Number</label>
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Password">Password</label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="ConfirmPassword">Confirm Password</label>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div>
                <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
            </div>
        </form>
        <div>
            <p class="mt-3">If you have already account you can login!</p>
            <p class="mt-3">
                <a asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl">Login as user</a>
            </p>
        </div>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
