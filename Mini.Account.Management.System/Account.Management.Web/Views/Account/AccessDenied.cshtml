@{
    ViewData["Title"] = "Access Denied";
}

<div class="content-wrapper">
    <section class="content d-flex justify-content-center align-items-center" style="height: 60vh;">
        <div class="error-page text-center">
            <h2 class="headline text-danger"><i class="fas fa-ban"></i></h2>
            <div class="error-content">
                <h1 class="text-danger">Access Denied</h1>
                <h3 class="text-danger">Sorry, You do not have permission righ now to access this page.</h3>

                <a href="javascript:history.back()" class="btn btn-primary mt-4">
                    <i class="fas fa-arrow-left mr-1"></i> Go Back
                </a>
            </div>
        </div>
    </section>
</div>

