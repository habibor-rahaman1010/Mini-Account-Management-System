@model List<VoucherTypeDto>
@{
    ViewData["Title"] = "Voucher Type List";
    int currentPage = ViewBag.CurrentPage ?? 1;
    int totalCount = ViewBag.TotalCount;
}

@{
    ViewData["Title"] = "Role List";
}

<style>
    .roles{
        border: 1px lightgray solid;
        padding:10px 30px
    }
</style>

<div class="container-fluid roles">
    <h2>Role List</h2>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Type Name</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var voucherType in Model)
            {
                <tr>
                    <td>@voucherType.TypeName</td>
                    <td>
                        <a asp-controller="AccountManagement" asp-action="EditRole" asp-route-id="@voucherType.Id" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-controller="AccountManagement" asp-action="DeleteRole" asp-route-id="@voucherType.Id" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this role?');">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <nav aria-label="Page navigation">
        <ul class="pagination">
            <!-- Previous Button -->
            <li class="page-item @(currentPage <= 1 ? "disabled" : "")">
                <a class="page-link" asp-controller="VoucherType" asp-action="VoucherTypeList" asp-route-page="@(currentPage - 1)">Previous</a>
            </li>

            <!-- Page Numbers -->
            @for (int i = 1; i <= totalCount; i++)
            {
                <li class="page-item @(i == currentPage ? "active" : "")">
                    <a class="page-link" asp-controller="VoucherType" asp-action="VoucherTypeList" asp-route-page="@i">@i</a>
                </li>
            }

            <!-- Next Button -->
            <li class="page-item @(currentPage >= totalCount ? "disabled" : "")">
                <a class="page-link" asp-controller="VoucherType" asp-action="VoucherTypeList" asp-route-page="@(currentPage + 1)">Next</a>
            </li>
        </ul>
    </nav>
</div>
