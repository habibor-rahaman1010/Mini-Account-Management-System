<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"] - Account.Management.Dashboard</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/admin/css/layout.css" asp-append-version="true" />

    @await RenderSectionAsync("Styles", required: false)

</head>
<body>
    <!-- Top Header -->
    <div class="header-bar">
        <div class="container-fluid">
            <h4 class="mb-0">Admin Dashboard</h4>
        </div>
    </div>

    <div class="wrapper">
        <!-- Sidebar -->
        <div class="sidebar">
            <a asp-controller="Dashboard" asp-action="Index">Dashboard</a>

            <a class="dropdown-toggle" data-bs-toggle="collapse" href="#userMenu" role="button" aria-expanded="false" aria-controls="userMenu">
                Users
            </a>
            <div class="collapse" id="userMenu">
                <a asp-controller="AccountManagement" asp-action="CreateRole" class="ps-4">Create Role</a>
                <a asp-controller="AccountManagement" asp-action="RoleList" class="ps-4">Role List</a>
                <a asp-controller="AccountManagement" asp-action="ChangeRole" class="ps-4">User Role Change</a>
                <a asp-controller="AccountManagement" asp-action="GetUserList" class="ps-4">User List</a>
            </div>

            <a class="dropdown-toggle" data-bs-toggle="collapse" href="#reportMenu" role="button" aria-expanded="false" aria-controls="reportMenu">
                Reports
            </a>
            <div class="collapse" id="reportMenu">
                <a href="/Reports/Daily" class="ps-4">Daily</a>
                <a href="/Reports/Monthly" class="ps-4">Monthly</a>
            </div>

            <a href="/Settings">Settings</a>
            <a href="/Account/Logout">Logout</a>
        </div>

        <div class="mx-3 mt-3 w-100">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>