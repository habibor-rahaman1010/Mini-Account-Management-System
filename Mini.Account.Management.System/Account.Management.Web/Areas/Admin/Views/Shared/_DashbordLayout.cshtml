<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"] - Account.Management.Dashboard</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/admin/css/layout.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

</head>
<body>

    <!-- Top Header -->
    <div class="header-bar">
        <div class="container-fluid">
            <h4 class="mb-0">Admin Dashboard</h4>
        </div>
    </div>

    <div class="wrapper">
        <!-- Sidebar -->
        <div class="sidebar">
            <a href="/Dashboard/Index">Dashboard</a>

            <a class="dropdown-toggle" data-bs-toggle="collapse" href="#userMenu" role="button" aria-expanded="false" aria-controls="userMenu">
                Users
            </a>
            <div class="collapse" id="userMenu">
                <a href="/Users/List" class="ps-4">User List</a>
                <a href="/Users/Create" class="ps-4">Add User</a>
            </div>

            <a class="dropdown-toggle" data-bs-toggle="collapse" href="#reportMenu" role="button" aria-expanded="false" aria-controls="reportMenu">
                Reports
            </a>
            <div class="collapse" id="reportMenu">
                <a href="/Reports/Daily" class="ps-4">Daily</a>
                <a href="/Reports/Monthly" class="ps-4">Monthly</a>
            </div>

            <a href="/Settings">Settings</a>
            <a href="/Account/Logout">Logout</a>
        </div>

        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
