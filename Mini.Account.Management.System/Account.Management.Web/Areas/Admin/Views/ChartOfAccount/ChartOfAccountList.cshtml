@model ChartOfAccountListViewModel

@{
    ViewData["Title"] = "ChartOfAccount List";
}

<style>
    .roles{
        border: 1px lightgray solid;
        padding:10px 30px
    }
</style>

<div class="container-fluid roles">
    <h2>Chart Of Account List</h2>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Account Name</th>
                <th>Code</th>
                <th>Description</th>
                <th>Account Type</th>
                <th>Is Active</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var account in Model.chartOfAccountDtos)
            {
                <tr>
                    <td>@account.AccountName</td>
                    <td>@account.Code</td>
                    <td>@account.Description</td>
                    <td>@account.AccountType</td>
                    <td>@account.IsActive</td>
                    <td>
                        <a asp-controller="ChartOfAccount" asp-action="UpdateChartOfAccount" asp-route-id="@account.Id" class="btn btn-sm btn-warning">Edit</a>
                        <form method="post" asp-controller="ChartOfAccount" asp-action="DeleteChartOfAccount" asp-route-id="@account.Id" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this account?');">
                            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <nav aria-label="Page navigation">
        <ul class="pagination">
            <!-- Previous Button -->
            <li class="page-item @(Model.Pager.CurrentPage <= 1 ? "disabled" : "")">
                <a class="page-link" asp-controller="ChartOfAccount" asp-action="GetAllChartOfAccounts" asp-route-page="@(Model.Pager.CurrentPage - 1)">Previous</a>
            </li>

            <!-- Page Numbers -->
            @for (int i = 1; i <= Model.Pager.TotalPages; i++)
            {
                <li class="page-item @(i == Model.Pager.CurrentPage ? "active" : "")">
                    <a class="page-link" asp-controller="ChartOfAccount" asp-action="GetAllChartOfAccounts" asp-route-page="@i">@i</a>
                </li>
            }

            <!-- Next Button -->
            <li class="page-item @(Model.Pager.CurrentPage >= Model.Pager.TotalPages ? "disabled" : "")">
                <a class="page-link" asp-controller="ChartOfAccount" asp-action="GetAllChartOfAccounts" asp-route-page="@(Model.Pager.CurrentPage + 1)">Next</a>
            </li>
        </ul>
    </nav>

</div>
