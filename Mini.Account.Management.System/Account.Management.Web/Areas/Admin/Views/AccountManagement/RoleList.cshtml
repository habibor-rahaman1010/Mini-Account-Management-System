@model RoleListViewModel

@{
    ViewData["Title"] = "Role List";
}

<style>
    .roles{
        border: 1px lightgray solid;
        padding:10px 30px
    }
</style>

<div class="container-fluid roles">
    <h2>Role List</h2>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Normalized Name</th>
                <th>Concurrency Stamp</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model.Roles)
            {
                <tr>
                    <td>@role.Name</td>
                    <td>@role.NormalizedName</td>
                    <td>@role.ConcurrencyStamp</td>
                    <td>
                        <a asp-controller="AccountManagement" asp-action="EditRole" asp-route-id="@role.Id" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-controller="AccountManagement" asp-action="DeleteRole" asp-route-id="@role.Id" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this role?');">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <nav aria-label="Page navigation">
        <ul class="pagination">
            <!-- Previous Button -->
            <li class="page-item @(Model.Pager.CurrentPage <= 1 ? "disabled" : "")">
                <a class="page-link" asp-action="RoleList" asp-route-page="@(Model.Pager.CurrentPage - 1)">Previous</a>
            </li>

            <!-- Page Numbers -->
            @for (int i = 1; i <= Model.Pager.TotalPages; i++)
            {
                <li class="page-item @(i == Model.Pager.CurrentPage ? "active" : "")">
                    <a class="page-link" asp-action="RoleList" asp-route-page="@i">@i</a>
                </li>
            }

            <!-- Next Button -->
            <li class="page-item @(Model.Pager.CurrentPage >= Model.Pager.TotalPages ? "disabled" : "")">
                <a class="page-link" asp-action="RoleList" asp-route-page="@(Model.Pager.CurrentPage + 1)">Next</a>
            </li>
        </ul>
    </nav>

</div>
